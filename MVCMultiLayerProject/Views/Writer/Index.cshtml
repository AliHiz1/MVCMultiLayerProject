@using EntityLayer.Concrete
@model List<Writer>
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<!DOCTYPE html>
<html>
<link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
<body class="hold-transition sidebar-mini">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Yazarlar</h1>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">
                    @foreach (var x in Model)
                    {
        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
            <div class="card bg-light">
                <div class="card-header text-muted border-bottom-0">
                    @*Veritabanına eklenmesi durumunda Writer Title buraya gelecek *@
                </div>
                <div class="card-body pt-0">
                    <div class="row">
                        <div class="col-7">
                            <h2 class="lead"><b>@x.WriterName @x.WriterSurname</b></h2>
                            <p class="text-muted text-sm">
                                <b>Yazar hakkında: </b>
                                <br />
                                @x.WriterAbout
                            </p>
                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span>@x.WriterMail</li>
                            </ul>
                        </div>
                        <div class="col-5 text-center">
                            <img src="@x.WriterImage" alt="" class="img-circle img-fluid">
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="text-right">
                        <a href="/Writer/WritersContents/@x.WriterID" class="btn btn-sm bg-teal">
                            <i class="fas fa-comments"></i> Yazarın Başlıkları ve Yazıları
                        </a>
                        <a href="/Writer/UpdateWriter/@x.WriterID" class="btn btn-sm btn-primary">
                            <i class="fas fa-user"></i> Profili Düzenle
                        </a>
                        <a href="/Writer/DeleteWriter/@x.WriterID" class="btn btn-sm bg-dark">
                            Yazarı Sil
                        </a>
                    </div>
                </div>
            </div>
        </div>}

                </div>
            </div>
        </div>
        <a href="/Writer/AddWriter/" class="btn btn-primary">Yeni Yazar Ekle</a>
    </section>
</body>
</html>
