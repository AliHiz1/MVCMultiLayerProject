@using EntityLayer.Concrete
@model List<Heading>

@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

@{ string color = "";
    string bttn = "";
    string status = ""; }

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Başlıklar</h1>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="card">
            <div class="card-header">
                Başlık Tablosu
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr class="text-center">
                            <th style="width: 10%">
                                #
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 30%">
                                Oluşturan Yazar
                            </th>
                            <th style="width: 10%">
                                Başlık Durumu
                            </th>
                            <th style="width: 10%">
                                Kategori
                            </th>
                            <th style="width: 20%">
                                İşlemler
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {

                            if (x.HeadingStatus == true)
                            {
                                color = "badge badge-success";
                                bttn = "Pasif Yap";
                                status = "btn btn-danger btn-sm";
                            }
                            else
                            {
                                color = "badge badge-danger";
                                bttn = "Aktif Yap";
                                status = "btn btn-success btn-sm";
                            }
                        <tr class="text-center">
                            <td>
                                @x.HeadingID
                            </td>
                            <td>
                                <a>
                                    @x.HeadingName
                                </a>
                                <br />
                                <small>
                                    @(((DateTime)x.HeadingDate).ToString("dd-MMM-yyyy"))
                                </small>
                            </td>
                            <td>
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <img alt="Avatar" class="table-avatar" src="@x.Writer.WriterImage">
                                    </li>
                                </ul>
                            </td>
                            <td class="project-state">
                                <span class="@color">@x.HeadingStatus</span>
                            </td>
                            <td>
                                @x.Category.CategoryName
                            </td>
                            <td class="project-actions text-center">
                                <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@x.HeadingID">
                                    <i class="fas fa-folder">
                                    </i>
                                    Yazı
                                </a>
                                <a class="btn btn-info btn-sm" href="/Heading/UpdateHeading/@x.HeadingID">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Güncelle
                                </a> 
                                <a class="@status" href="/Heading/DeleteHeading/@x.HeadingID">
                                    <i class="fas fa-sync-alt"></i>
                                    @bttn
                                </a>
                            </td>
                        </tr>}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</body>
</html>
<a href="/Heading/AddHeading/" class="btn btn-primary">Yeni Başlık Ekle</a>


