@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/11/style.css">
</head>
<body>
    <div class="header-bg">
        <div class="site-title-des">
            <h1 class="site-title">
                <a href="#">Site Başlığı</a>
            </h1>
            <h2 class="site-description"></h2>
        </div>
    </div>
    <header id="masthead" class="site-header" role="banner">
        <div class="stick">
            <nav id="site-navigation" class="main-navigation clear" role="navigation">
                <button onclick="menuIndex()" id="menu-button" class="menu-toggle" aria-controls="primary-menu" aria-expanded="false">Menü</button>
                <ul id="primary-menu-ul" class="menu nav-menu" aria-expanded="false">
                    <li id="menu-item-1" class="menu-item-1-1 current-menu-item-1">
                        <a href="/Home/Index/" aria-current="page">Ana Sayfa</a>
                    </li>
                    <li id="menu-item-2" class="menu-item-2-1 current-menu-item-2">
                        <a href="/Home/Blog/" aria-current="page">Blog</a>
                    </li>
                    <li id="menu-item-3" class="menu-item-3-1 current-menu-item-3">
                        <a href="/Home/About/" aria-current="page">Hakkında</a>
                    </li>
                    <li id="menu-item-3" class="menu-item-4-1 current-menu-item-4">
                        <a href="/Home/Contact/" aria-current="page">İletişim</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
    <div id="content" class="site-content">
        @RenderBody()
        <div id="secondary" class="widget-area" role="complementary"></div>
    </div>

    <div class="footer-wrap clear">
        @*@using (Html.BeginForm("Subscribe", "Home", FormMethod.Post))
        {*@

        <form action="/Home/Subscribe/">
            <footer class="last-footer" role="contentinfo">
                <div class="site-info">
                    <p class="footer-link" style="font-size: 32px; color: #e8554e; margin: 0 auto;">Yeni içerik doğrudan gelen kutunuza iletilsin.</p>
                    <label id="subscribe-field-label" for="subscribe-field" class="screen-reader">E-posta Adresi</label>
                    <input type="email" name="emailaddress" value id="subscribe-field" placeholder="E-posta adresinizi giriniz"
                           style="width: 50%; font-size: 16px; padding: 15px 23px 15px 23px; border-radius: 0px; border-width: 1px;" />
                    @{  
                        string returnvalue = "Index";
                        if (ViewBag.sub == 1)
                        {
                            returnvalue = "Index";
                        }
                        else if (ViewBag.sub == 2)
                        {
                            returnvalue = "Blog";
                        }
                        else if (ViewBag.sub == 3)
                        {
                            returnvalue = "About";
                        }
                        else if (ViewBag.sub == 4)
                        {
                            returnvalue = "Contact";
                        }
                        TempData["returnvaluee"] = returnvalue;
                    }
                    <p id="subscribe-submit">
                        <input type="hidden" name="blog_id" value="#">
                        <input type="hidden" name="source" value="#">
                        <input type="hidden" name="sub-type" id="widget">
                        <input type="hidden" name="redirect_fragment" id="subscribe-blog">
                        <button type="submit" class="sub-button" style="background-color: #e8554e; color: #fff; font-size: 16px; padding: 15px 23px 15px 23px; margin-top: 10px; margin-bottom: 10px; border-radius: 0px; border-width: 1px;"> Abone Ol </button>
                    </p>
                </div>
            </footer>
            <div class="text-md-center">@ViewBag.ErrorMessage</div>
        </form>
        @*}*@
    </div>
    <script src="~/11/menu-index.js"></script> 
</body>
</html>
