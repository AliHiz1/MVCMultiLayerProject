@using EntityLayer.Concrete
@model List<Category>

@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

@{ string color = "";
    string bttn = "";
    string status = ""; }

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Kategoriler</h1>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="card">
            <div class="card-header">
                Kategori Tablosu
                <div class="card-tools" style="align-items:end">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr class="text-center">
                            <th style="width: 5%">
                                #
                            </th>
                            <th style="width: 20%">
                                Kategori Adı
                            </th>
                            <th style="width: 10%">
                                Kategori Durumu
                            </th>
                            <th style="width: 20%">
                                Kategori Açıklaması
                            </th>
                            <th style="width: 15%">
                                Ayarlar
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            if (x.CategoryStatus == true)
                            {
                                color = "badge badge-success";
                                bttn = "Pasif Yap";
                                status = "btn btn-danger btn-sm";
                            }
                            else
                            {
                                color = "badge badge-danger";
                                bttn = "Aktif Yap";
                                status = "btn btn-success btn-sm";
                            }
                            <tr class="text-center">
                                <td>
                                    @x.CategoryID
                                </td>
                                <td>
                                    <a>
                                        @x.CategoryName
                                    </a>
                                    <br />
                                </td>
                                <td class="project-state">
                                    <span class="@color">@x.CategoryStatus</span>
                                </td>
                                <td>
                                    <a>
                                        @x.CategoryDescription
                                    </a>
                                </td>
                                <td class="project-actions text-right" style="text-align:center!important">
                                    <a class="@status" href="/AdminCategory/ChangeCategoryStatus/@x.CategoryID">
                                        <i class="fa fa-refresh" aria-hidden="true"></i>
                                        @bttn
                                    </a>
                                    <a class="btn btn-success btn-sm" href="/Heading/HeadingsByCategory/@x.CategoryID">
                                        <i class="fas fa-book"></i>
                                        Kategoriye Ait Başlıklar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/AdminCategory/UpdateCategory/@x.CategoryID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Güncelle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/AdminCategory/DeleteCategory/@x.CategoryID">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</body>
</html>
<a href="/AdminCategory/AddCategory/" class="btn btn-primary">Yeni Kategori Ekle</a>


